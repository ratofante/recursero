---
interface Props {
	classes?: string;
}

import ContainerBase from '@components/Container/ContainerBase.astro';
import { Icon } from 'astro-icon/components';

const { classes } = Astro.props;
---

<ContainerBase classes=`px-4 ${classes}`>
	<div class="flex flex-col relative opacity-90">
		<div class="mb-4 order-1 lg:order-3 lg:mt-8 leading-7 text-sm">
			Proyecto ideado y gestionado <br />
			por: <span class="font-semibold">Nazarena P. Silvetti</span>
		</div>
		<div class="flex gap-2 items-center mb-2 order-2 lg:order-1">
			<Icon name="ion:call" width={12} height={12} /> +54 9 11 7360-4520
		</div>
		<div class="flex gap-2 items-center order-3 lg:order-2">
			<Icon name="ion:mail" width={12} height={12} /> nazarenasilvetti@gmail.com
		</div>
	</div>
</ContainerBase>
