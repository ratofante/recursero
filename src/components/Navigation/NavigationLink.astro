---
import { Icon } from 'astro-icon/components';

interface Props {
	to: string;
	name?: string;
	leadingIcon?: string;
	trailingIcon?: string;
	size?: string | 'normal';
}

const { to, name, leadingIcon, trailingIcon, size } = Astro.props;
---

<a
	href={to}
	class="cursor-pointer relative after:content-[''] after:absolute after:top-0 after:-left-0 after:w-full after:h-full after:bg-primary after:bg-opacity-0 after:z-0 hover:after:bg-opacity-35 after:transition-colors after:duration-100"
>
	<div
		class="flex gap-4 justify-between px-2 py-2 items-center relative z-10"
		class:list={[{ 'gap-4': size === 'normal' }, { 'gap-2 text-sm': size === 'small' }]}
	>
		{
			leadingIcon && (
				<div class="">
					<Icon name={leadingIcon} width={size != 'normal' ? 18 : 24} height={size != 'normal' ? 18 : 24} />
				</div>
			)
		}
		<div class="mr-auto">
			{name}
		</div>
		{
			trailingIcon && (
				<div class="">
					<Icon name={trailingIcon} width={12} height={12} />
				</div>
			)
		}
	</div>
</a>
