---
import ButtonMenu from './ButtonMenu.astro';
import ButtonSearch from './ButtonSearch.astro';
import ButtonTheme from './ButtonTheme.astro';

interface Props {
	classes?: string;
}
const { classes }: Props = Astro.props;
---

<header class="fixed left-0 right-0 top-0 z-40 h-[--header-height]" class:list={[classes]}>
	<div
		class="relative z-50 mx-auto h-full max-w-2xl rounded-b-md border-b-4 border-secondary bg-white px-2 shadow-sm shadow-gray sm:px-4 md:px-8 lg:max-w-7xl lg:px-2 dark:border-primary dark:bg-black dark:shadow-none"
	>
		<div class="flex h-full items-center justify-between">
			<!-- Logo -->
			<div class="relative grid h-6 w-6 place-items-center">
				<a
					href="/"
					class="absolute flex h-12 w-12 items-center justify-center gap-[1px] font-serif text-2xl font-extrabold leading-none dark:text-white"
				>
					R<span class="h-[6px] w-[6px] translate-y-[7px] rounded-full bg-primary"></span>
				</a>
			</div>

			<div class="ml-auto flex items-center">
				<ButtonSearch />
				<ButtonTheme />
			</div>
			<ButtonMenu classes="lg:hidden" />
		</div>
	</div>
</header>
